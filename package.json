{
  "name": "action-cmake-build",
  "version": "0.0.1",
  "private": true,
  "description": "Github action to Build & Test CMake projects",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "dry": "node --experimental-modules bootstrap.mjs",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ashutoshvarma/action-cmake-build.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "cmake"
  ],
  "author": "Ashutosh Varma",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.1.1",
    "@actions/io": "^1.0.2"
  },
  "devDependencies": {
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.40",
    "@types/yaml": "^1.9.7",
    "@typescript-eslint/parser": "^5.27.1",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-jest": "^26.5.3",
    "jest": "^28.1.0",
    "jest-circus": "^28.1.0",
    "js-yaml": "^4.1.0",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.4",
    "typescript": "^4.7.3",
    "yaml": "^2.1.1"
  }
}
